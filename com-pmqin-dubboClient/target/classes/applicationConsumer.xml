<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
       xsi:schemaLocation="http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans.xsd  
        http://code.alibabatech.com/schema/dubbo  
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd  
        ">  
  
    <!-- consumer application name -->  
    <dubbo:application name="consumer-of-helloworld-app"  owner="programmer" organization="dubbox" />  
  
    <!-- registry address, used for consumer to discover services -->  
<!--     <dubbo:registry address="multicast://127.0.0.1:1234" />   -->
<!--     <dubbo:consumer timeout="5000" />   -->
 <!--向 zookeeper 订阅 provider 的地址，由 zookeeper 定时推送-->
    <dubbo:registry address="zookeeper://192.168.118.128:2181"/>
    <!-- which service to consume? -->  
    <dubbo:reference id="demoService" interface="com.pmqin.service.SayHelloToClient"/>  
</beans>  