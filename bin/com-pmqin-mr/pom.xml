	</parent>

	<artifactId>com-pmqin-mr</artifactId>

	<packaging>war</packaging>
	<name>com-pmqin-mr Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<dependencies>



		<dependency>
			<groupId>javax.servlet</groupId>
